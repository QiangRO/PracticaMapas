<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/purple_200">

    <ImageView
        android:id="@+id/info_window_imagen"
        android:layout_width="118dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_home_32"
        android:contentDescription="@string/info_description" />

    <TextView
        android:id="@+id/info_window_textMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@id/info_window_imagen"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:text="@string/new_marker"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info_window_cordenadas"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_window_textMarker"
        android:layout_toEndOf="@id/info_window_imagen"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:text="@string/coordenadas"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>